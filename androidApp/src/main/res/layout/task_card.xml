<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_shadow_start_color"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp"
    android:layout_marginVertical="4dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/textView_taskCard_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autoSizeMaxTextSize="18dp"
        android:autoSizeMinTextSize="12dp"
        android:autoSizeTextType="uniform"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/textTask"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/button_taskCard_complete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/button_taskCard_complete"
        tools:text="This is the title" />

    <TextView
        android:id="@+id/textView_taskCard_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autoSizeMaxTextSize="18dp"
        android:autoSizeMinTextSize="12dp"
        android:autoSizeTextType="uniform"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/textTask"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/button_taskCard_complete"
        app:layout_constraintEnd_toStartOf="@id/button_taskCard_complete"
        app:layout_constraintStart_toStartOf="@id/textView_taskCard_title"
        app:layout_constraintTop_toBottomOf="@id/textView_taskCard_title"
        tools:text="This is a description" />

    <Button
        android:id="@+id/button_taskCard_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/complete_task_button"
        android:textColor="@color/textTask"
        app:layout_constraintBottom_toBottomOf="@id/textView_taskCard_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView_taskCard_title" />

</androidx.constraintlayout.widget.ConstraintLayout>
